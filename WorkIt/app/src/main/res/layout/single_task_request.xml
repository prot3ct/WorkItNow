<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85sp"
        android:id="@+id/id_single_task_request_holder">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:id="@+id/id_task_requester_profile_picture_image_view"
                android:layout_width="115px"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/blank_profile_picture"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/id_full_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name signed "
                android:layout_gravity="center"
                android:textColor="@color/md_black_1000"
                android:textSize="18sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/id_accept_task_request_button"
                android:layout_width="50sp"
                android:layout_gravity="center"
                android:layout_height="50sp"
                android:background="@drawable/ic_checked"/>
            <Button
                android:id="@+id/id_decline_task_request_button"
                android:layout_gravity="center"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/ic_decline"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>